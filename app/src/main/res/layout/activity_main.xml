<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/operation"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text=""
        android:textSize="80sp"
        android:textColor="#FFFFFF"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="@id/result"
        app:layout_constraintBottom_toBottomOf="@+id/result"
        app:layout_constraintTop_toTopOf="@id/result"
        app:layout_constraintBaseline_toBaselineOf="@id/result" />

    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginEnd="10dp"
        android:gravity="bottom|end"
        android:inputType="numberDecimal"
        android:text="Enter"
        android:textColor="#FFFFFF"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonClear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="AC"
                android:textColor="#080808"
                android:textSize="30sp"
                app:backgroundTint="#A5A5A5"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/buttonNegative"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="+/-"
                android:textColor="#080808"
                android:textSize="30sp"
                app:backgroundTint="#A5A5A5"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/buttonPercent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="%"
                android:textColor="#080808"
                android:textSize="30sp"
                app:backgroundTint="#A5A5A5"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/buttonChia"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="รท"
                android:textColor="#F9FFEF"
                android:textSize="30sp"
                app:backgroundTint="#FEA00C"
                style="?android:attr/buttonBarButtonStyle"/>

            >
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="7"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:backgroundTint="#343434"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:backgroundTint="#343434"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="9"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:backgroundTint="#343434"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/buttonNhan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="ร"
                android:textColor="#F9FFEF"
                android:textSize="30sp"
                app:backgroundTint="#FEA00C"
                style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:backgroundTint="#343434"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:backgroundTint="#343434"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:backgroundTint="#343434"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/buttonTru"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="-"
                android:textColor="#F9FFEF"
                android:textSize="30sp"
                app:backgroundTint="#FEA00C"
                style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:backgroundTint="#343434"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:backgroundTint="#343434"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:backgroundTint="#343434"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/buttonCong"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="+"
                android:textColor="#F9FFEF"
                android:textSize="30sp"
                app:backgroundTint="#FEA00C"
                style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="@drawable/number0"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:backgroundTint="#343434"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/buttonPhay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text=","
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:backgroundTint="#343434"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/buttonBang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="="
                android:textColor="#F9FFEF"
                android:textSize="30sp"
                app:backgroundTint="#FEA00C"
                style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>